<% provide(:title, "Resend Confirmation Instructions") %>
<% provide(:header, "Resend Confirmation Instructions") %>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :autofocus => true %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation instructions", class: "btn btn-primary" %>
  </div>
<% end %>

<% content_for(:sidebar) do %>
  <%= render "devise/shared/links" %>
<% end %>
